{% comment %}
  Step 1: Create a customizable Hero Section
{% endcomment %}

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading Text",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "hero_subtext",
      "label": "Subheading Text",
      "default": "Discover amazing products tailored for you."
    },
    {
      "type": "url",
      "id": "hero_cta_url",
      "label": "Call-to-Action URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "hero_cta_text",
      "label": "Call-to-Action Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}

<div class="hero-section" style="background-image: url({{ section.settings.hero_image | file_url }});">
  <div class="hero-content">
    <h1>{{ section.settings.hero_heading }}</h1>
    <p>{{ section.settings.hero_subtext }}</p>
    <a href="{{ section.settings.hero_cta_url }}" class="cta-button">{{ section.settings.hero_cta_text }}</a>
  </div>
</div>

<style>
.hero-section {
  position: relative;
  background-size: cover;
  background-position: center;
  height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  padding: 0 20px;
}
.hero-content {
  max-width: 800px;
  background: rgba(0, 0, 0, 0.5);
  padding: 20px;
  border-radius: 10px;
}
.cta-button {
  display: inline-block;
  margin-top: 15px;
  padding: 10px 20px;
  color: white;
  background: #007ace;
  text-decoration: none;
  border-radius: 5px;
}
.cta-button:hover {
  background: #005ea2;
}
</style>